@model IEnumerable<OnlineMusicStore.Models.MusicItem>

@{
    ViewBag.Title = "Music Items";
}

<h2>@ViewBag.CategoryName Music</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@item.ImagePath" class="card-img-top" alt="@item.Title" />
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">Artist: @item.Artist</p>
                    <p class="card-text">Genre: @item.Genre</p>
                    <p class="card-text"><strong>₹@item.Price</strong></p>
                    <audio controls>
                        <source src="@Url.Content(item.FilePath)" type="audio/mpeg" />
                        Your browser does not support the audio element.
                    </audio>
                </div>
            </div>
        </div>
    }
</div>
