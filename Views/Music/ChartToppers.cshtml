@model IEnumerable<OnlineMusicStore.Models.ChartTopperViewModel>

@{
    ViewBag.Title = "Chart Toppers";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="display-5 fw-bold text-primary">🎶 Chart Toppers</h2>
        <p class="lead text-muted">Here are the most popular songs based on votes!</p>
    </div>

    <div class="card shadow-sm p-4 rounded-4">
        <table class="table table-hover table-bordered align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th class="text-center">🏆 Rank</th>
                    <th class="text-center">🎵 Song</th>
                    <th class="text-center">🎤 Artist</th>
                    <th class="text-center">📊 Votes</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int rank = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@rank</td>
                        <td class="text-center">@item.Music.Title</td>
                        <td class="text-center">@item.Music.Artist</td>
                        <td class="text-center">@item.Votes</td>
                    </tr>
                    rank++;
                }
            </tbody>
        </table>
    </div>
</div>
